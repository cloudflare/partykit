    "@changesets/cli": "^2.27.3",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@manypkg/cli": "^0.21.4",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.2.5",
