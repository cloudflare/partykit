{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "assist": {
    "actions": {
      "source": {
        "useSortedKeys": "off",
        "organizeImports": "off"
      }
    },
    "enabled": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "fixtures/**",
      "packages/**",
      "!**/node_modules",
      "!**/dist",
      "!**/coverage",
      "!**/*.d.ts",
      "!**/*.d.mts",
      "!./packages/partysocket/event-target-polyfill.*",
      "!tsconfig.base.json",
      "!**/.wrangler",
      "!**/lexical.css",
      "!**/normalize.css",
      "!**/reset.css"
    ]
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off",
        "noParameterAssign": "off",
        "noUselessElse": "off"
      },
      "suspicious": {
        "noRedeclare": "off",
        "noConfusingVoidType": "off"
      },
      "complexity": {
        "noForEach": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
